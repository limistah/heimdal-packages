{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SuggestionPatterns",
  "description": "File patterns that suggest package installations",
  "type": "object",
  "required": ["patterns"],
  "properties": {
    "patterns": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["files", "suggests"],
        "properties": {
          "files": {
            "type": "array",
            "items": {
              "type": "string",
              "description": "File name or glob pattern"
            },
            "minItems": 1,
            "description": "Files to match"
          },
          "suggests": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["package", "priority", "reason"],
              "properties": {
                "package": {
                  "type": "string",
                  "description": "Package to suggest"
                },
                "priority": {
                  "type": "string",
                  "enum": ["required", "recommended", "optional"],
                  "description": "Suggestion priority"
                },
                "reason": {
                  "type": "string",
                  "description": "Why this package is suggested"
                }
              }
            },
            "minItems": 1,
            "description": "Packages to suggest"
          }
        }
      },
      "minItems": 1
    }
  },
  "additionalProperties": false
}
