{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Profile",
  "description": "Complete development environment template",
  "type": "object",
  "required": ["id", "name", "description", "type", "packages"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique profile identifier"
    },
    "name": {
      "type": "string",
      "minLength": 3,
      "maxLength": 50,
      "description": "Human-readable profile name"
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "maxLength": 200,
      "description": "What this profile provides"
    },
    "type": {
      "type": "string",
      "enum": ["minimal", "developer", "devops", "designer", "data-scientist", "custom"],
      "description": "Profile type classification"
    },
    "packages": {
      "type": "object",
      "properties": {
        "essential": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Must-have packages"
        },
        "terminal": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Terminal tools and utilities"
        },
        "editor": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Text editors and IDEs"
        },
        "languages": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Programming languages and runtimes"
        },
        "containers": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Container and orchestration tools"
        },
        "infrastructure": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Infrastructure and cloud tools"
        },
        "databases": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Database systems and clients"
        },
        "other": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Other tools"
        }
      },
      "minProperties": 1,
      "additionalProperties": false
    },
    "dotfiles": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["source", "target"],
        "properties": {
          "source": {
            "type": "string",
            "description": "Source path in dotfiles repo"
          },
          "target": {
            "type": "string",
            "description": "Target path on system"
          }
        }
      },
      "description": "Dotfile mappings"
    },
    "hooks": {
      "type": "object",
      "properties": {
        "pre_install": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["command"],
            "properties": {
              "command": {
                "type": "string",
                "description": "Command to run"
              },
              "description": {
                "type": "string",
                "description": "What this command does"
              }
            }
          }
        },
        "post_install": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["command"],
            "properties": {
              "command": {
                "type": "string",
                "description": "Command to run"
              },
              "description": {
                "type": "string",
                "description": "What this command does"
              }
            }
          }
        }
      }
    }
  },
  "additionalProperties": false
}
