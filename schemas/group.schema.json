{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PackageGroup",
  "description": "Curated package collection",
  "type": "object",
  "required": ["id", "name", "description", "category", "packages"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique group identifier"
    },
    "name": {
      "type": "string",
      "minLength": 3,
      "maxLength": 50,
      "description": "Human-readable group name"
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "maxLength": 200,
      "description": "What this group provides"
    },
    "category": {
      "type": "string",
      "enum": ["development", "productivity", "system", "security", "media"],
      "description": "Group category"
    },
    "packages": {
      "type": "object",
      "properties": {
        "required": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1,
          "description": "Required packages"
        },
        "optional": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Optional packages"
        }
      },
      "required": ["required"]
    },
    "platform_overrides": {
      "type": "object",
      "properties": {
        "macos": {
          "type": "object",
          "properties": {
            "packages": {
              "type": "array",
              "items": { "type": "string" }
            },
            "casks": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        },
        "linux": {
          "type": "object",
          "properties": {
            "packages": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        }
      }
    }
  },
  "additionalProperties": false
}
