{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Dependencies",
  "description": "Package dependency relationships",
  "type": "object",
  "patternProperties": {
    "^[a-z0-9-]+$": {
      "type": "object",
      "properties": {
        "required": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["package", "reason"],
            "properties": {
              "package": {
                "type": "string",
                "description": "Package name"
              },
              "reason": {
                "type": "string",
                "description": "Why this dependency is required"
              }
            }
          },
          "description": "Required dependencies"
        },
        "optional": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["package", "reason"],
            "properties": {
              "package": {
                "type": "string",
                "description": "Package name"
              },
              "reason": {
                "type": "string",
                "description": "Why this dependency is recommended"
              }
            }
          },
          "description": "Optional dependencies"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
